---
import Image from 'astro/components/Image.astro';
import logo from '../assets/logo.png';
---

<div
  class="bg-light-light dark:bg-dark-light border-b border-dark-dark dark:border-light-light"
>
  <nav
    class="flex justify-between max-w-[1440px] px-[140px] bg-light-light dark:bg-dark-light m-auto py-3"
  >
    <Image src={logo} alt="Logo" width={35} height={35} />
    <ul class="flex gap-5">
      <li class="pt-1 dark:text-tt-dark">
        <a href="/book-summaries">Book Summaries</a>
      </li>
      <li class="pt-1 dark:text-tt-dark"><a href="/tech">Tech</a></li>
      <li class="pt-1 dark:text-tt-dark">
        <a href="/productivity">Productivity</a>
      </li>
      <li class="pt-1 dark:text-tt-dark"><a href="/code">Code</a></li>
      <li class="pt-1 dark:text-tt-dark">
        <a href="/newsletter">Newsletter</a>
      </li>
      <button id="toggle-theme">
        <svg
          id="sun-icon"
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="white"
          class="size-8 hidden dark:block"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M12 3v2.25m6.364.386-1.591 1.591M21 12h-2.25m-.386 6.364-1.591-1.591M12 18.75V21m-4.773-4.227-1.591 1.591M5.25 12H3m4.227-4.773L5.636 5.636M15.75 12a3.75 3.75 0 1 1-7.5 0 3.75 3.75 0 0 1 7.5 0Z"
          ></path>
        </svg>
        <svg
          id="moon-icon"
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="black"
          class="size-7 block dark:hidden"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M21.752 15.002A9.72 9.72 0 0 1 18 15.75c-5.385 0-9.75-4.365-9.75-9.75 0-1.33.266-2.597.748-3.752A9.753 9.753 0 0 0 3 11.25C3 16.635 7.365 21 12.75 21a9.753 9.753 0 0 0 9.002-5.998Z"
          ></path>
        </svg>
      </button>
    </ul>
  </nav>
</div>
